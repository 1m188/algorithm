{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "dotnet run",
            "detail": "dotnet 10 以后支持的单文件脚本模式",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "run",
                "${fileBasename}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            }
        },
        {
            "label": "java",
            "type": "shell",
            "command": "java",
            "args": [
                "${fileBasename}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            }
        },
        {
            "label": "gcc",
            "type": "shell",
            "command": "gcc",
            "windows": {
                "args": [
                    "${fileBasename}",
                    "-o",
                    "${fileBasenameNoExtension}",
                    ";",
                    "./${fileBasenameNoExtension}.exe",
                    ";",
                    "rm",
                    "${fileBasenameNoExtension}.exe"
                ]
            },
            "linux": {
                "args": [
                    "${fileBasename}",
                    "-o",
                    "${fileBasenameNoExtension}.out",
                    "-lm",
                    "&&",
                    "./${fileBasenameNoExtension}.out",
                    "&&",
                    "rm",
                    "${fileBasenameNoExtension}.out"
                ]
            },
            "options": {
                "cwd": "${fileDirname}"
            }
        },
        {
            "label": "g++",
            "type": "shell",
            "command": "g++",
            "windows": {
                "args": [
                    "${fileBasename}",
                    "-o",
                    "${fileBasenameNoExtension}",
                    ";",
                    "./${fileBasenameNoExtension}.exe",
                    ";",
                    "rm",
                    "${fileBasenameNoExtension}.exe"
                ]
            },
            "linux": {
                "args": [
                    "${fileBasename}",
                    "-o",
                    "${fileBasenameNoExtension}.out",
                    "&&",
                    "./${fileBasenameNoExtension}.out",
                    "&&",
                    "rm",
                    "${fileBasenameNoExtension}.out"
                ]
            },
            "options": {
                "cwd": "${fileDirname}"
            }
        },
        {
            "label": "clang",
            "type": "shell",
            "command": "clang",
            "windows": {
                "args": [
                    "${fileBasename}",
                    "-o",
                    "'${fileBasenameNoExtension}.exe'", // 单引号包住，防止有空格的情况出现
                    ";",
                    "./'${fileBasenameNoExtension}.exe'",
                    ";",
                    "rm",
                    "'${fileBasenameNoExtension}.exe'"
                ],
                "options": {
                    "shell": {
                        "executable": "PowerShell"
                    }
                }
            },
            "linux": {
                "args": [
                    "${fileBasename}",
                    "-o",
                    "${fileBasenameNoExtension}.out",
                    "-lm",
                    "&&",
                    "./${fileBasenameNoExtension}.out",
                    "&&",
                    "rm",
                    "${fileBasenameNoExtension}.out"
                ]
            },
            "options": {
                "cwd": "${fileDirname}"
            }
        },
        {
            "label": "clang++",
            "type": "shell",
            "command": "clang++",
            "windows": {
                "args": [
                    "${fileBasename}",
                    "-o",
                    "${fileBasenameNoExtension}.exe",
                    ";",
                    "./${fileBasenameNoExtension}.exe",
                    ";",
                    "rm",
                    "${fileBasenameNoExtension}.exe"
                ],
                "options": {
                    "shell": {
                        "executable": "PowerShell"
                    }
                }
            },
            "linux": {
                "args": [
                    "${fileBasename}",
                    "-o",
                    "${fileBasenameNoExtension}.out",
                    "-lm",
                    "&&",
                    "./${fileBasenameNoExtension}.out",
                    "&&",
                    "rm",
                    "${fileBasenameNoExtension}.out"
                ]
            },
            "options": {
                "cwd": "${fileDirname}"
            }
        },
        {
            "label": "python",
            "type": "shell",
            "command": "python",
            "args": [
                "${fileBasename}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            }
        },
        {
            "label": "node",
            "type": "shell",
            "command": "node",
            "args": [
                "${fileBasename}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            }
        },
        {
            "label": "rustc",
            "type": "shell",
            "command": "rustc",
            "linux": {
                "args": [
                    "${fileBasename}",
                    "-o",
                    "${fileBasenameNoExtension}.out",
                    "&&",
                    "./${fileBasenameNoExtension}.out",
                    "&&",
                    "rm",
                    "${fileBasenameNoExtension}.out"
                ],
            },
            "options": {
                "cwd": "${fileDirname}"
            }
        },
        {
            "label": "go",
            "type": "shell",
            "command": "go",
            "args": [
                "run",
                "${file}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            }
        },
        {
            "label": "nowcoder_go",
            "type": "shell",
            "detail": "在nowcoder目录下创建牛客刷题go文件",
            "windows": {
                "command": "mkdir",
                "args": [
                    "${input:nowcoder}",
                    "&&",
                    "cd",
                    "${input:nowcoder}",
                    "&&",
                    "type",
                    "nul",
                    ">>",
                    "${input:nowcoder}.go",
                ],
                "options": {
                    "shell": {
                        "executable": "cmd",
                        "args": [
                            "/d",
                            "/c"
                        ],
                    },
                }
            },
            "options": {
                "cwd": "nowcoder",
            },
        },
        {
            "label": "nowcoder_rs",
            "type": "shell",
            "detail": "在src/bin目录下创建牛客刷题rust文件",
            "windows": {
                "command": "type",
                "args": [
                    "nul",
                    ">>",
                    "nowcoder_${input:nowcoder}.rs",
                ],
                "options": {
                    "shell": {
                        "executable": "cmd",
                        "args": [
                            "/d",
                            "/c"
                        ],
                    },
                }
            },
            "options": {
                "cwd": "src/bin",
            },
        }
    ],
    "inputs": [
        {
            "id": "nowcoder",
            "type": "promptString",
            "description": "请输入牛客题目文件名称"
        }
    ]
}